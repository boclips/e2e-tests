{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": [
      "node",
      "node-fetch",
      "cypress",
      "cypress-axe",
      "@types/testing-library__cypress",
      "@percy/cypress"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": ["../../node_modules/cypress", "cypress/**/*.ts", "setup/**/*.ts"]
}
